<!-- TODO: format and style -->
<div class="row" id="student-<%=student.id%>">
  <div class="col">
    <h1 class="title-header"><%= "#{student.last_name}, #{student.first_name}" %></h1>
    <h2> Age: <%= student.age %></h2>
    <h2> Highest level of education: <%= education_level_map(student.highest_level_of_education) %> </h2>
    <%= link_to 'View', student_path(student), class: "btn btn-primary" %>
    <%= link_to 'Edit', edit_student_path(student), class: "btn btn-primary" %>
    <%= link_to 'Delete', delete_student_path(student), remote: true, method: 'delete', class: "btn btn-danger" %>
  </div>
</div>