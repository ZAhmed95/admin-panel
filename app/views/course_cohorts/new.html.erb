<%= content_for :display do %>
  <%=
    render partial: 'shared/form_wrapper', locals: {
      title: if @editing then "Edit Cohort" else "Add Cohort" end,
      model: @course,
      fields_path: "cohorts/form_fields",
      submit_text: "#{@editing ? "Edit" : "Add"} Cohort",
      action: cohorts_in_course_path(@course)
    }
  %>
<% end %>

<%= content_for :controls do %>
  <%= render partial: 'shared/control_button', locals: {text: 'Cancel', path: course_path(@course)} %>
<% end %>