<%= content_for :display do %>
  <h1> <%= @cohort.cohort_name %> </h1>
  <h2> Course: <%= link_to "#{@course.course_name}", course_path(@course) %> </h2>
  <h2> Start date: <%= @cohort.start_date.strftime("%B %d, %Y") %> </h2>
  <h2> End date: <%= @cohort.end_date.strftime("%B %d, %Y") %> </h2>
  <h2> Instructor: <%= @instructor&.first_name || "None assigned" %> </h2>
  <h2> Students: <%= @students.count %> </h2>
<% end %>

<%= content_for :controls do %>
  <%= render partial: 'shared/control_button', locals: {text: 'Edit cohort', path: edit_cohort_path(@cohort)} %>
  <%= render partial: 'shared/control_button', locals: {text: 'View students', path: students_in_cohort_path(@cohort)} %>
  <%= render partial: 'shared/control_button', locals: {text: 'Add students', path: add_students_to_cohort_path(@cohort)} %>
  <%= render partial: 'shared/delete_button', locals: {text: 'Delete cohort', path: delete_cohort_path(@cohort)} %>
<% end %>