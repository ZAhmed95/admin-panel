<%= content_for :controls do %>
  <%= render partial: 'shared/control_button', locals: {text: 'Cancel', path: send("#{model.model_name.plural}_path")} %>
<% end %>

<%= content_for :display do %>
  <%=
    render partial: 'shared/form_wrapper', locals: {
      title: if @editing then "Edit #{model.model_name.name}" else "Add #{model.model_name.name}" end,
      model: model,
      fields_path: "#{model.model_name.plural}/form_fields",
      submit_text: "#{@editing ? "Edit" : "Add"} #{model.model_name.name}"
    }
  %>
<% end %>